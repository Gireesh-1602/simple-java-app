pipeline {
    agent {
        // Use the Node.js 16 Docker image
        docker {
            image 'node:16'
            args '-p 3000:3000' // Map port 3000 from the container to the host (if needed)
        }
    }

    stages {
        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                // Run tests (if applicable)
                sh 'npm test'
            }
        }

        stage('Start Application') {
            steps {
                // Start the application
                sh 'npm start'
            }
        }
    }
}

